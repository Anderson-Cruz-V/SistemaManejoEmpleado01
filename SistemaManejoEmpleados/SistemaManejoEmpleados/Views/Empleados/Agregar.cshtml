@model SistemaManejoEmpleados.Models.Empleado
@using SistemaManejoEmpleados.Models
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Registrar Empleado";

    // Para el dropdown de 'Estado'
    var estadoList = new List<SelectListItem> {
        new SelectListItem { Text = "Vigente",    Value = "true"  },
        new SelectListItem { Text = "No vigente", Value = "false" }
    };
}

<h2 class="mb-4">Registrar Empleado</h2>

<form asp-action="Agregar" method="post">
    <!-- ...otros campos... -->
    <!-- Departamento -->
    <div class="form-group mb-3">
        <label asp-for="DepartamentoId" class="form-label"></label>
        <select asp-for="DepartamentoId"
                class="form-control"
                asp-items="@(new SelectList((List<Departamento>)ViewData["Departamentos"], "Id", "Nombre"))">
            <option value="">-- Selecciona un departamento --</option>
        </select>
    </div>

    <!-- Cargo -->
    <div class="form-group mb-3">
        <label asp-for="CargoId" class="form-label"></label>
        <select asp-for="CargoId"
                class="form-control"
                asp-items="@(new SelectList((List<Cargo>)ViewData["Cargos"], "Id", "Titulo"))">
            <option value="">-- Selecciona un cargo --</option>
        </select>
    </div>

    <!-- Salario -->
    <div class="form-group mb-3">
        <label asp-for="Salario" class="form-label"></label>
        <input asp-for="Salario" class="form-control" />
    </div>

    <!-- Estado -->
    <div class="form-group mb-4">
        <label asp-for="Estado" class="form-label"></label>
        <select asp-for="Estado"
                class="form-control"
                asp-items="estadoList">
            <option value="">-- Selecciona un estado --</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="Lista" class="btn btn-secondary">Cancelar</a>
</form>
