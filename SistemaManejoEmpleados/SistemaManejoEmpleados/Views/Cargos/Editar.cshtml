@model SistemaManejoEmpleados.Models.Cargo
@using SistemaManejoEmpleados.Models
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Editar Cargo";
}

<h2 class="mb-4">Editar Cargo</h2>

<form asp-action="Editar" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-3">
        <label asp-for="Titulo" class="form-label"></label>
        <input asp-for="Titulo" class="form-control" />
    </div>

    <div class="form-group mb-4">
        <label asp-for="DepartamentoId" class="form-label"></label>
        <select asp-for="DepartamentoId"
                class="form-control"
                asp-items="@(new SelectList((List<Departamento>)ViewData["Departamentos"], "Id", "Nombre", Model.DepartamentoId))">
            <option value="">-- Selecciona un departamento --</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success">Guardar cambios</button>
    <a asp-action="Lista" class="btn btn-secondary">Cancelar</a>
</form>
