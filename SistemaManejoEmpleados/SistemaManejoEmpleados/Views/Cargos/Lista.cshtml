@model IEnumerable<SistemaManejoEmpleados.Models.Cargo>
@{
    ViewData["Title"] = "Lista de Cargos";
}

<h2 class="mb-4">Lista de Cargos</h2>
<p>
    <a asp-action="Agregar" class="btn btn-primary">Registrar Nuevo Cargo</a>
</p>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Título</th>
            <th>Departamento</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Titulo</td>
                <td>@item.Departamento?.Nombre</td>
                <td>
                    <a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Eliminar" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

