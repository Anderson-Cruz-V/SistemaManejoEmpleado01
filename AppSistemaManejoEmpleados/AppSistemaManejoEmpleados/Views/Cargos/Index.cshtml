@model IEnumerable<AppSistemaManejoEmpleados.Models.Cargo>
@{
    ViewData["Title"] = "Cargos";
}
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="bi bi-badge-ad me-2"></i>Listado de Cargos</h5>
        <div class="d-flex gap-2">
            <a class="btn btn-brand" asp-action="Crear"><i class="bi bi-plus-lg me-1"></i>Crear Nuevo</a>
            <a class="btn btn-outline-secondary" asp-action="ExportarCsv"><i class="bi bi-filetype-csv me-1"></i>Exportar CSV</a>
        </div>
    </div>
    @if (!Model.Any())
    {
        <div class="empty-state">
            <i class="bi bi-inboxes display-6 d-block mb-2"></i>
            No hay cargos registrados.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Título</th>
                        <th style="width:130px"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var c in Model)
                    {
                        <tr>
                            <td>@c.Id</td>
                            <td>@c.Titulo</td>
                            <td class="text-end">
                                <div class="btn-group btn-group-sm">
                                    <a class="btn btn-outline-primary" asp-action="Detalles" asp-route-id="@c.Id"><i class="bi bi-eye"></i></a>
                                    <a class="btn btn-outline-warning" asp-action="Editar" asp-route-id="@c.Id"><i class="bi bi-pencil-square"></i></a>
                                    <a class="btn btn-outline-danger" asp-action="Eliminar" asp-route-id="@c.Id"><i class="bi bi-trash"></i></a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
