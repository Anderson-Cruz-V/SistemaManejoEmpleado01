@model AppSistemaManejoEmpleados.Models.Cargo
@{
    ViewData["Title"] = "Editar Cargo";
}
<div class="card">
    <div class="card-header">
        <h5 class="mb-0"><i class="bi bi-pencil-square me-2"></i>Editar Cargo</h5>
    </div>
    <div class="card-body">
        <form asp-action="Editar">
            <input type="hidden" asp-for="Id" />
            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="Titulo" class="form-label"></label>
                    <input asp-for="Titulo" class="form-control" />
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                </div>
            </div>
            <div class="mt-4 d-flex gap-2">
                <button class="btn btn-brand"><i class="bi bi-save me-1"></i>Guardar</button>
                <a class="btn btn-outline-secondary" asp-action="Index"><i class="bi bi-arrow-left me-1"></i>Volver</a>
            </div>
        </form>
    </div>
</div>
