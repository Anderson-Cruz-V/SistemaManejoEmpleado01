@{
    ViewData["Title"] = "Inicio";
}

<div class="hero p-4 p-md-5 mb-4">
    <div class="row align-items-center g-4">
        <div class="col-md-7">
            <h1 class="display-6 fw-semibold mb-2">Sistema de Manejo de Empleados</h1>
            <p class="lead mb-4">Administra empleados, departamentos y cargos con rapidez. Exporta tus datos a CSV cuando lo necesites.</p>

            <div class="d-flex flex-wrap gap-2">
                <a asp-controller="Empleados" asp-action="Index" class="btn btn-light">
                    <i class="bi bi-people-fill me-1"></i> Ver Empleados
                </a>
                <a asp-controller="Empleados" asp-action="Crear" class="btn btn-outline-light">
                    <i class="bi bi-plus-lg me-1"></i> Crear Empleado
                </a>
                <a asp-controller="Empleados" asp-action="ExportarCsv" class="btn btn-outline-light">
                    <i class="bi bi-filetype-csv me-1"></i> Exportar CSV
                </a>
            </div>
        </div>

        <div class="col-md-5 text-center">
            <img src="~/img/hero-dashboard.svg" class="img-fluid hero-img" alt="Panel de control" />
        </div>
    </div>
</div>

<div class="row g-3">
    <div class="col-md-4">
        <div class="card h-100 card-kpi">
            <div class="card-body d-flex align-items-center">
                <div class="kpi-icon bg-primary-subtle text-primary me-3"><i class="bi bi-people-fill"></i></div>
                <div>
                    <div class="small text-muted">Empleados</div>
                    <div class="h4 mb-0">@ViewBag.CantEmpl</div>
                </div>
            </div>
            <div class="card-footer bg-transparent border-0 pt-0">
                <a asp-controller="Empleados" asp-action="Index" class="stretched-link">Ir al listado</a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card h-100 card-kpi">
            <div class="card-body d-flex align-items-center">
                <div class="kpi-icon bg-success-subtle text-success me-3"><i class="bi bi-diagram-3"></i></div>
                <div>
                    <div class="small text-muted">Departamentos</div>
                    <div class="h4 mb-0">@ViewBag.CantDep</div>
                </div>
            </div>
            <div class="card-footer bg-transparent border-0 pt-0">
                <a asp-controller="Departamentos" asp-action="Index" class="stretched-link">Gestionar</a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card h-100 card-kpi">
            <div class="card-body d-flex align-items-center">
                <div class="kpi-icon bg-warning-subtle text-warning me-3"><i class="bi bi-badge-ad"></i></div>
                <div>
                    <div class="small text-muted">Cargos</div>
                    <div class="h4 mb-0">@ViewBag.CantCarg</div>
                </div>
            </div>
            <div class="card-footer bg-transparent border-0 pt-0">
                <a asp-controller="Cargos" asp-action="Index" class="stretched-link">Gestionar</a>
            </div>
        </div>
    </div>
</div>
