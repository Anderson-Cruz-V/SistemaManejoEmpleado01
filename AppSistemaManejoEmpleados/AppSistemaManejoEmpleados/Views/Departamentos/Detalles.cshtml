@model AppSistemaManejoEmpleados.Models.Departamento
@{
    ViewData["Title"] = "Detalles del Departamento";
}
<div class="card">
    <div class="card-header">
        <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Detalles del Departamento</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">ID</dt>
            <dd class="col-sm-10">@Model.Id</dd>
            <dt class="col-sm-2">Nombre</dt>
            <dd class="col-sm-10">@Model.Nombre</dd>
        </dl>
        <div class="mt-3 d-flex gap-2">
            <a class="btn btn-warning" asp-action="Editar" asp-route-id="@Model.Id"><i class="bi bi-pencil-square me-1"></i>Editar</a>
            <a class="btn btn-outline-secondary" asp-action="Index"><i class="bi bi-arrow-left me-1"></i>Volver</a>
        </div>
    </div>
</div>
