@model IEnumerable<AppSistemaManejoEmpleados.Models.Empleado>
@{
    ViewData["Title"] = "Listado de Empleados";
    var depNombres = ViewBag.DepNombres as IDictionary<int, string>;
    var cargoTitulos = ViewBag.CargoTitulos as IDictionary<int, string>;
    var n = 0;
}
<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Crear" class="btn btn-primary">Crear Nuevo</a>
    <a asp-action="ExportarCsv" class="btn btn-outline-secondary ms-2">Exportar CSV</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>N°</th>
            <th>ID</th>
            <th>Nombre</th>
            <th>Departamento</th>
            <th>Cargo</th>
            <th>Fecha de Inicio</th>
            <th>Salario</th>
            <th>Estado</th>
            <th>Tiempo</th>
            <th>AFP</th>
            <th>ARS</th>
            <th>ISR</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var e in Model)
        {
            <tr>
                <td>@(++n)</td>
                <td>@e.Id</td>
                <td>@e.Nombre</td>
                <td>@((depNombres != null && depNombres.ContainsKey(e.DepartamentoId)) ? depNombres[e.DepartamentoId] : "")</td>
                <td>@((cargoTitulos != null && cargoTitulos.ContainsKey(e.CargoId)) ? cargoTitulos[e.CargoId] : "")</td>
                <td>@e.FechaInicio.ToString("yyyy-MM-dd")</td>
                <td>@e.Salario.ToString("N2")</td>
                <td>@(e.Estado ? "Vigente" : "No vigente")</td>
                <td>@e.TiempoEnEmpresa</td>
                <td>@e.AFP.ToString("N2")</td>
                <td>@e.ARS.ToString("N2")</td>
                <td>@e.ISR.ToString("N2")</td>
                <td>
                    <a asp-action="Detalles" asp-route-id="@e.Id">Detalles</a> |
                    <a asp-action="Editar" asp-route-id="@e.Id">Editar</a> |
                    <a asp-action="Eliminar" asp-route-id="@e.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
