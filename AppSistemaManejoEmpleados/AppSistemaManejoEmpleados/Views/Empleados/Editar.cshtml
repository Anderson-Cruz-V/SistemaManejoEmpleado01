@model AppSistemaManejoEmpleados.Models.Empleado
@{
    ViewData["Title"] = "Editar Empleado";
}
<div class="card">
    <div class="card-header">
        <h5 class="mb-0"><i class="bi bi-pencil-square me-2"></i>Editar Empleado</h5>
    </div>
    <div class="card-body">
        <form asp-action="Editar">
            <input type="hidden" asp-for="Id" />
            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="Nombre" class="form-label"></label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="col-md-3">
                    <label asp-for="DepartamentoId" class="form-label"></label>
                    <select asp-for="DepartamentoId" class="form-select" asp-items="ViewBag.DepartamentoId"></select>
                    <span asp-validation-for="DepartamentoId" class="text-danger"></span>
                </div>

                <div class="col-md-3">
                    <label asp-for="CargoId" class="form-label"></label>
                    <select asp-for="CargoId" class="form-select" asp-items="ViewBag.CargoId"></select>
                    <span asp-validation-for="CargoId" class="text-danger"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="FechaInicio" class="form-label"></label>
                    <input asp-for="FechaInicio" type="date" class="form-control" />
                    <span asp-validation-for="FechaInicio" class="text-danger"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="Salario" class="form-label"></label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input asp-for="Salario" class="form-control" step="0.01" />
                    </div>
                    <span asp-validation-for="Salario" class="text-danger"></span>
                </div>

                <div class="col-md-4">
                    <label class="form-label d-block">Estado</label>
                    <div class="form-check form-switch">
                        <input asp-for="Estado" class="form-check-input" />
                        <label class="form-check-label" for="Estado">Vigente</label>
                    </div>
                </div>
            </div>

            <div class="mt-4 d-flex gap-2">
                <button class="btn btn-brand"><i class="bi bi-save me-1"></i>Guardar</button>
                <a class="btn btn-outline-secondary" asp-action="Index"><i class="bi bi-arrow-left me-1"></i>Volver</a>
            </div>
        </form>
    </div>
</div>


