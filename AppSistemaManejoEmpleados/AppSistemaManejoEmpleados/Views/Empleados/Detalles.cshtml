@model AppSistemaManejoEmpleados.Models.Empleado
@{
    ViewData["Title"] = "Detalles del Empleado";
    var deps = ViewBag.DepNombres as IDictionary<int, string> ?? new Dictionary<int, string>();
    var cargos = ViewBag.CargoTitulos as IDictionary<int, string> ?? new Dictionary<int, string>();
    var depNombre = deps.TryGetValue(Model.DepartamentoId, out var d) ? d : "-";
    var cargoTitulo = cargos.TryGetValue(Model.CargoId, out var c) ? c : "-";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="bi bi-person-badge me-2"></i>Detalles del Empleado</h5>
        <div class="d-flex gap-2">
            <a asp-action="Editar" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="bi bi-pencil-square me-1"></i>Editar
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-1"></i>Volver
            </a>
        </div>
    </div>

    <div class="card-body">
        <div class="row g-4">
            <div class="col-md-6">
                <div class="border rounded p-3 h-100">
                    <div class="mb-2 small text-muted">Información Básica</div>
                    <dl class="row mb-0">
                        <dt class="col-sm-4">ID</dt>
                        <dd class="col-sm-8">@Model.Id</dd>

                        <dt class="col-sm-4">Nombre</dt>
                        <dd class="col-sm-8">@Model.Nombre</dd>

                        <dt class="col-sm-4">Departamento</dt>
                        <dd class="col-sm-8">@depNombre</dd>

                        <dt class="col-sm-4">Cargo</dt>
                        <dd class="col-sm-8">@cargoTitulo</dd>

                        <dt class="col-sm-4">Fecha de Inicio</dt>
                        <dd class="col-sm-8">@Model.FechaInicio.ToString("yyyy-MM-dd")</dd>

                        <dt class="col-sm-4">Estado</dt>
                        <dd class="col-sm-8">
                            @if (Model.Estado)
                            {
                                <span class="badge-soft-success">Vigente</span>
                            }
                            else
                            {
                                <span class="badge-soft-danger">No vigente</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Tiempo en Empresa</dt>
                        <dd class="col-sm-8">@Model.TiempoEnEmpresa</dd>
                    </dl>
                </div>
            </div>

            <div class="col-md-6">
                <div class="border rounded p-3 h-100">
                    <div class="mb-2 small text-muted">Compensación</div>
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Salario</dt>
                        <dd class="col-sm-8">@Model.Salario.ToString("N2")</dd>

                        <dt class="col-sm-4">AFP</dt>
                        <dd class="col-sm-8">@Model.AFP.ToString("N2")</dd>

                        <dt class="col-sm-4">ARS</dt>
                        <dd class="col-sm-8">@Model.ARS.ToString("N2")</dd>

                        <dt class="col-sm-4">ISR</dt>
                        <dd class="col-sm-8">@Model.ISR.ToString("N2")</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>
